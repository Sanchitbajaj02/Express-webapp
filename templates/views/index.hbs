<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-12 col-md-10 mx-auto">
                <div class="row">
                    <!-- left side div -->
                    <div class="col-12 col-md-6 main_header_left">
                        <p>Welcome to weather appp</p>
                        <h1>Get the Latest <span class="text-clr">Weather</span> Info of your City</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>
                    <!-- right side div -->
                    <div class="col-12 col-md-6 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="./img/bg1.png" class="img-align">
                                </div>
                                <div class="carousel-item">
                                    <img src="./img/bg2.png" class="img-align">
                                </div>
                                <div class="carousel-item">
                                    <img src="./img/bg3.png" class="img-align">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{>footer}}
</body>

</html>